<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:local="clr-namespace:Domino_Label_Production">
    <Style TargetType="Button">
        <!--<Setter Property="Background">
            <Setter.Value>
                <SolidColorBrush Color="#009639"/>
            </Setter.Value>
        </Setter>-->
        <Setter Property="Content" Value="Clear"/>
        <Setter Property="Effect">
            <Setter.Value>
                <DropShadowEffect Color="Black" Opacity="0.50" BlurRadius="4" RenderingBias="Quality" ShadowDepth="3"/>
            </Setter.Value>
        </Setter>
        <Setter Property="BorderBrush" Value="Black"/>
        <Setter Property="Foreground" Value="White"/>
        
    </Style>
</ResourceDictionary>