<UserControl x:Class="Domino_Label_Production.UserControls.MaskinStatus"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Domino_Label_Production.UserControls"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid Margin="10">
        <Grid.Effect>
            <DropShadowEffect BlurRadius="1" RenderingBias="Quality" ShadowDepth="1"/>
        </Grid.Effect>
        <Grid.RowDefinitions>
            <RowDefinition Height="0.1*"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Border Grid.Row="0" Grid.Column="0" VerticalAlignment="Stretch" HorizontalAlignment="Stretch" Margin="10,0,10,0" Background="#005983">
            <Viewbox>
                <TextBlock Text="Maskin 1" TextAlignment="Center"  FontSize="25" FontFamily="Helvetica"  Foreground="White" />
            </Viewbox>
        </Border>
        <Border Grid.Row="0" Grid.Column="2"  VerticalAlignment="Stretch" HorizontalAlignment="Stretch" Margin="10,0,10,0" Background="#005983">
            <Viewbox>
                <TextBlock Text="Maskin 2" TextAlignment="Center"  FontSize="25" FontFamily="Helvetica"  Foreground="White" />
            </Viewbox>
        </Border>
        <Border BorderBrush="LightGray" BorderThickness="1" Grid.Row="1" Grid.Column="0" Grid.RowSpan="2" Margin="10,0,10,0">
            <Grid x:Name="Maskin1Grid">
                <Grid.RowDefinitions>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                </Grid.ColumnDefinitions>
                <Border Background="#4881b2" BorderThickness="1"/>
                <Label Grid.Row="0" Content="Tillverkningsorder" HorizontalAlignment="Center" VerticalAlignment="Center" Foreground="White"/>
                <Label Grid.Row="1" Content="Kund" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                <Label Grid.Row="2" Content="Leveransdatum" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                <Label Grid.Row="3" Content="Artikelnummer" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                <Label Grid.Row="4" Content="Artikelnamn" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                <Label Grid.Row="5" Content="Antal rulle" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                <Label Grid.Row="6" Content="Cylinder" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                <Label Grid.Row="7" Content="Stans" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                <Label Grid.Row="8" Content="Diameter" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                <Label Grid.Row="9" Content="Råmaterial" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                <Label Grid.Row="10" Content="LOT" HorizontalAlignment="Center" VerticalAlignment="Center"/>
            </Grid>
        </Border>
        <Border BorderBrush="LightGray" BorderThickness="1" Grid.Row="1" Grid.Column="1" Grid.RowSpan="2" Margin="10,0,10,0">
            <DataGrid x:Name="Maskin2Grid">
                
            </DataGrid>
        </Border>
    </Grid>
</UserControl>
